<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.skills.any? %>
      <h3>Skills (<%= @user.skills.count %>)</h3>
      <ol class="skills">
        <%= render @skills %>
      </ol>
      <%= will_paginate @skills %>
    <% end %>
  </div>
  <div class="col-md-8">
    <% if @user.experiences.any? %>
      <h3>Experiences (<%= @user.experiences.count %>)</h3>
      <ol class="experiences">
        <%= render @experiences %>
      </ol>
      <%= will_paginate @experiences %>
    <% end %>
  </div>
</div>