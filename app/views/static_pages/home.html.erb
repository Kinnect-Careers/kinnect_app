<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="skill_form">
        <%= render 'shared/skill_form' %>
      </section>
      <section class="experience_form">
        <%= render 'shared/experience_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>CV Feed</h3>
      <%= render 'shared/cv_feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to </h1><h1>Kinnect Careers</h1>
    <h2>Connecting employers and job seekers</h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
    <!-- TODO: Add LOGO!
      link_to image_tag("kinnect_logo.svg", alt: "Kinnect Careers Logo", width: "200"), home_url
    -->
  </div>
<% end %>